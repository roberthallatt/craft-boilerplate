# Production Environment Configuration
# Copy this file to .env.production for production deployments

# The application ID
CRAFT_APP_ID=

# The environment Craft is currently running in
CRAFT_ENVIRONMENT=production

# The secure key Craft will use for hashing and encrypting data
CRAFT_SECURITY_KEY=

# Cookie validation key for secure cookies
CRAFT_COOKIE_VALIDATION_KEY=

# Database connection settings
CRAFT_DB_DRIVER=mysql
CRAFT_DB_SERVER=localhost
CRAFT_DB_PORT=3306
CRAFT_DB_DATABASE=
CRAFT_DB_USER=
CRAFT_DB_PASSWORD=
CRAFT_DB_SCHEMA=
CRAFT_DB_TABLE_PREFIX=

# General settings
CRAFT_DEV_MODE=false
CRAFT_ALLOW_ADMIN_CHANGES=false
CRAFT_DISALLOW_ROBOTS=false

# Base site URL (no trailing slash)
PRIMARY_SITE_URL=https://yourdomain.com

# Vite settings - NOT NEEDED IN PRODUCTION
# The Vite dev server variables should NOT be set in production
# Assets will be loaded from the built files in web/assets/
