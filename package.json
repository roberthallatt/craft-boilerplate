{
  "name": "craftcms-boilerplate",
  "version": "1.0.0",
  "description": "Craft CMS boilerplate with Vite, TailwindCSS, and Alpine.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run build:watch\" \"npm run dev:sync\"",
    "dev:vite": "vite",
    "dev:host": "vite --host",
    "dev:sync": "browser-sync start --config bs-config.cjs",
    "build": "vite build",
    "build:watch": "vite build --watch",
    "preview": "vite preview",
    "setup": "./setup.sh",
    "ddev:start": "ddev start",
    "ddev:stop": "ddev stop",
    "craft:install": "ddev craft install",
    "lint:css": "stylelint \"src/**/*.{css,scss}\"",
    "lint:css:fix": "stylelint \"src/**/*.{css,scss}\" --fix"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/typography": "^0.5.16",
    "alpinejs": "^3.15.0",
    "autoprefixer": "^10.4.20",
    "browser-sync": "^3.0.4",
    "concurrently": "^9.2.1",
    "postcss": "^8.5.1",
    "sass": "^1.83.4",
    "stylelint": "^16.24.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-scss": "^6.12.1",
    "tailwindcss": "^3.4.17",
    "tailwindcss-debug-screens": "^2.2.1",
    "terser": "^5.37.0",
    "vite": "^6.0.7",
    "vite-plugin-restart": "^0.4.2",
    "vite-plugin-static-copy": "^2.2.0"
  },
  "optionalDependencies": {
    "fsevents": "^2.3.3"
  },
  "author": "",
  "license": "ISC"
}
