{
  "name": "craftcms-boilerplate",
  "version": "1.0.0",
  "description": "Craft CMS boilerplate with Vite, TailwindCSS, and Alpine.js",
  "type": "module",
  "scripts": {
    "dev": "npm run dev:clean && vite",
    "dev:clean": "lsof -ti:3030 | xargs kill -9 2>/dev/null || true",
    "dev:host": "vite --host",
    "build": "vite build",
    "build:watch": "vite build --watch",
    "preview": "vite preview",
    "generate-certs": "mkdir -p .ddev/certs && cd .ddev/certs && mkcert localhost 127.0.0.1 ::1",
    "dev:secure": "npm run generate-certs && npm run dev",
    "setup": "./setup.sh",
    "ddev:start": "ddev start",
    "ddev:stop": "ddev stop",
    "craft:install": "ddev craft install"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/typography": "^0.5.16",
    "@vitejs/plugin-basic-ssl": "^1.2.0",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "sass": "^1.79.4",
    "tailwindcss": "^3.4.13",
    "vite": "^5.4.8",
    "vite-plugin-restart": "^0.4.1",
    "vite-plugin-static-copy": "^1.0.6"
  },
  "optionalDependencies": {
    "fsevents": "^2.3.3"
  },
  "author": "",
  "license": "ISC"
}
